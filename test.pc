#lang reader "polecat.rkt"

(***** testing polecat language features *****)

main () = (
   println ("Testing Polecat Lanuage Features
--------------------------------");
   println ("bignum:");
   println (pow (2, 100));
   println ("recursion, closure:");
   let ls = fibs(50) in (
      println (ls);
      println ("lambda, higher order function:");
      println (sum(ls))))

pow (m, n) =
   if n = 0 then 1
   else m * pow (m, n - 1)

fibs (n) =
   let
      f (c, acc) =
         if c > n then acc
         else if c >= 2 then f (c + 1, cons (first (acc) + second (acc), acc))
         else f (c + 1, cons (c, acc))
   in
      reverse (f (0, []))

second (ls) = first (rest (ls))

reverse (ls) =
   let
      f (ls, acc) =
         if empty (ls) then acc
         else f (rest (ls), cons (first (ls), acc))
   in
      f (ls, [])

fold (f, init, ls) =
   let
      g (acc, ls) =
         if empty (ls) then acc
         else g (f (first (ls), acc), rest(ls))
   in
      g (init, ls)

sum (ls) = fold (lambda (m, n) -> m + n, 0, ls)
